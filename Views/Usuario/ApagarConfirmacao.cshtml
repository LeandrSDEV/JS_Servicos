@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de apagar o usuário";
}
<br />

<div class="text-center mb-4">
    <h3>Realmente deseja apagar o usuário (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary w-100 mb-1" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="Apagar">Confirmar exclusão</a>
